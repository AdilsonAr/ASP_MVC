
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @model Examen1ds39.Models.DTOLogin
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.ValidationSummary("", htmlAttributes: new { @class = "text-danger" })
    @Html.LabelFor(m => m.nombre, null, htmlAttributes: new { @class = "text-dark" })
    @Html.TextBoxFor(m => m.nombre, null, htmlAttributes: new { @class = "form - control" })
    <br />
    @Html.LabelFor(m => m.contra, null, htmlAttributes: new { @class = "text-dark" })
    @Html.PasswordFor(m => m.contra, htmlAttributes: new { @class = "form - control" })
    <input type="submit" name="boton" value="enviar" class="btn btn-success"/>
}